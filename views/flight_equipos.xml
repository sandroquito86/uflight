<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_equipo_deteccion_tree">
            <field name="name">flight.equipo.deteccion</field>
            <field name="model">flight.equipo.deteccion</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="descripcion"/>
                </tree>
            </field>
        </record>

        <record id="view_equipos_deteccion_form" model="ir.ui.view">
            <field name="name">flight.equipo.deteccion</field>
            <field name="model">flight.equipo.deteccion</field>
            <field name="arch" type="xml">
                <form string="NUEVO">
                    <sheet>
                        <group >
                            <group >
                                <field name="name" style="text-transform: uppercase;"/>
                                <field name="descripcion" style="text-transform: uppercase;"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--field name="limit">2</field-->
        <record model="ir.actions.act_window" id="action_equipo_deteccion">
            <field name="name">EQUIPOS DE DETECCION</field>
            <field name="res_model">flight.equipo.deteccion</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- server action to the one above -->
        <menuitem name="Equipos de Detección" id="menu_action_equipo_deteccion" parent="menu_flight_administration" action="action_equipo_deteccion" sequence="2" />


