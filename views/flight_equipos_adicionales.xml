<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="view_flight_adicionales_tree">
            <field name="name">flight.addtional.equipment</field>
            <field name="model">flight.addtional.equipment</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="descripcion"/>
                   
                </tree>
            </field>
        </record>

        <record id="view_flight_equipos_edicionales_form" model="ir.ui.view">
            <field name="name">flight.addtional.equipment.form</field>
            <field name="model">flight.addtional.equipment</field>
            <field name="arch" type="xml">
                <form string="NUEVO">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" style="text-transform: uppercase;"/>
                                <field name="descripcion" style="text-transform: uppercase;"/>                               
                            </group>
                        </group>
                        <group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--field name="limit">2</field-->
        <record model="ir.actions.act_window" id="action_flight_adicionales">
            <field name="name">EQUIPOS ADICIONALES</field>
            <field name="res_model">flight.addtional.equipment</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- server action to the one above -->
        <menuitem name="Equipos Adicionales" id="menu_action_flight_adicionales" parent="menu_flight_administration" action="action_flight_adicionales" sequence="2" />

    </data>
</odoo>